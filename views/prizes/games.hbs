<div class="container">
    <div class="earncoins-title">
        <h3>Search:</h3>
        <form method="get" action='/prizes/search'>
            <div class="form-group">
{{searchInput}}
                <input type="text" class="form-control" name="search" id="search" value="{{searchInput}}" placeholder="Search">
            </div>
                
                <select  class="custom-select mb-2 mr-sm-2 mb-sm-0" name="sort">
                <option value=""  selected="selected">Sort By</option>
                <option value="popular">Popular</option>
                <option value="recent">Recent</option>
                <option value="oldest">Oldest</option>

            </select>
               <button type='submit'class="btn">Search</button>
    </div>
    <div class="row">

        {{#if sortBy}}
        <div class="col-sm-12">

        <h3>Sorted By {{sortBy}}</h3>
        </div>

        {{/if}} {{#each games}}
        <div class="col-sm-12 col-lg-3 col-md-6 ">
            <div class="card card-prizes" style='width: 275px;height:520px;'>
                <img class="card-img-top" src="{{this.imgPath}}" alt="Card image cap" width="260px" height="290px">
                <div class="card-body">
                    <h5 class="card-title">{{truncate this.title 22}}</h5>
                    <p class="card-text line-clamp">{{truncate this.description 80}}</p>
                    <p class="right">{{this.price}}
                        <img style="padding-bottom:8px;" class="right" width="17px" height="28px" src="/images/dollar.svg" alt=" coins">
                    </p>
                    <a href="/prizes/{{this.title}}" class="btn btn-primary">Redeem</a>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>
</div>




<style>


    .line-clamp {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
         overflow: hidden;
    }
</style>




