

<div class="profile-container">

    <div class="earncoins-title">
        <h1>
            <span class="fa fa-anchor"></span> Profile Settings</h1>
    </div>




    <div class="container">
        <div class="row">
            <div style="text-align: center;" class="col-sm-12 col-md-4">
                <img src='{{user.profileimgurl}}' height="140px" width="140px"class="rounded-circle"  alt="profile picture">
                <h2>Hello {{user.username}}</h2>
                <div class="profile-userbuttons">
                    <a class="profile-btn btn btn-primary" href="/profile/overview">Overview</a>
                    <a class="profile-btn btn btn-primary" href="/profile/settings">Settings</a>
                    <a class="profile-btn btn btn-primary" href="/profile/orders">Orders</a>
                    <a class="profile-btn btn btn-primary" href="/profile/addcoin">add coin</a>
                </div>
            </div>
            <div class="col-sm-12 col-md-6">
                
                    {{!-- form2 --}}
                    <form method="post" action="/profile/update?_csrf={{csrfToken}}"  encType="multipart/form-data">
                          <div class="custom-file">
                            <input type="file" id='inputGroupFile01' class="custom-file-input" name="image">
                            <label class="custom-file-label" for="inputGroupFile01">Choose picture</label>
                        </div>
                            <div class="form-group">
                            <label for="exampleInputEmail1">Edit email address</label>
                            <input type="email" class="form-control" aria-describedby="emailHelp"  placeholder='{{user.email}}' id="editemail"
                                name="editemail">
                            <small id="emailHelp" class="form-text text-muted">New email must be verified.</small>
                        </div>


                        <div class="form-group">
                            <label for="exampleInputEmail1">Edit username</label>
                            <input type="text" class="form-control" aria-describedby="usernameHelp" autocomplete="nope" placeholder='{{user.username}}'
                                id="editusername" name="editusername">
                            <small id="usernameHelp" class="form-text text-muted">username should be around 6 and 8 characters</small>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">Edit password</label>
                            <input type="password" class="form-control" id="editpassword" name="editpassword" placeholder="edit your password">
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">confirm your current password before updating.</label>
                            <input type="password" class="form-control" id="pass" name="pass" placeholder=" current password">
      <div class="g-recaptcha" data-sitekey="6LfGQ00UAAAAAN5PJ9zK7-lM60HByjKHpgfxNEq_"></div>

                        </div>
                        
                        <button type="submit" class="btn btn-primary">Submit</button>

                    </form>

                
            </div>

        </div>


    </div>

</div>


<script>
    $(document).ready(function () {
        $('#inputGroupFile01').on('change', function () {
            //get the file name
            var fileName = $(this).val();
            //replace the "Choose a file" label
            $(this).next('.custom-file-label').html(fileName);
        })
    })

</script> 
