            </div> --}}
            <div class="form-group row mb-0">
              <div class="col-md-8 offset-md-4">
                <button type="submit" onclick="this.disable = true" class="btn btn-primary">
                  submit
                </button>

            
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>



<script>
  var allowSubmit = true;
  function submitionOnce() {
    if (allowSubmit == true)
      allowSubmit = false;
    else
      return false
  }
</script>