<div class="login container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">Pasword Reset</div>

        <div class="card-body">
          <form method="POST" action="/password/reset" onsubmit="return submitionOnce()">
            <input type="hidden" name="_csrf" value="{{csrfToken}}" />
            <div class="form-group row">

              <label for="email" class="col-sm-4 col-form-label text-md-right">Enter your Email to recieve a password Reset:</label>

              <div class="col-md-6">
                <input id="email" type="email" name="email" class="form-control"  required autofocus>

              </div>
            </div>


