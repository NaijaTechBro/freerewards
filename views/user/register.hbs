<div class="row">
  <div class=" register-box z-depth-3 col s12 m6 offset-m3 ">

    {{!-- {{#if errors}}
    <div class="alert alert-danger">
      {{#each errors}}
      <p>{{this}}</p>
      {{/each}}
    </div>
    {{/if}} --}}
    <form class="col s12" method="post" action="/user/register">

      <div class="row">
        <div class="input-field col s6">
          <input id="last_name" type="text" name="name" class="validate" value="{{name}} "required>
          <label for="last_name">name</label>
        </div>
        <div class="input-field col s6">
          <input id="last_name" type="text" name="username" value="{{username}}" class="validate" required>
          <label for="last_name">username</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="email" type="email" name="email" value="{{email}}" class="validate" required>
          <label for="email" data-error="wrong" data-success="right">Email</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <input id="password" type="password" name="password" class="validate" required>
          <label for="password">Password</label>
        </div>
        <div class="input-field col s6">
          <input id="password" type="password" name="password2" class="validate" required>
          <label for="password">Password</label>
        </div>
      </div>
      <input type="checkbox" id="indeterminate-checkbox" />
      <label for="indeterminate-checkbox">I HAVE READ AND ACCEPT THE TERMS OF SERVICE</label>
      <br>
      <br>
            <input type="hidden" name="_csrf" value="{{csrfToken}}" />

      <button type="submit" class="btn">Register</button>

    </form>



  </div>





  <link rel="stylesheet" type="text/css" href="/stylesheets/register.css">